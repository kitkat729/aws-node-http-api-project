{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": false,
    "esModuleInterop": true,  // import commonjs modules into es6 modules
    "target": "es2019",
    "outDir": ".build",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": [
      "es2020",
      "dom"
    ],
    "baseUrl": ".",
    "rootDir": ".",
  },
  "include": [
    "./functions/**/*",
    "./constants/**/*",
    "./__tests__/**/*",
    "./jest/**/*"
  ],
  "exclude": [".vscode", ".serverless", ".git", "node_modules"]
}